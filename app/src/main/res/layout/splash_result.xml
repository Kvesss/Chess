<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Bisque"
    >


    <TextView
        android:id="@+id/tvCongrats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tvCongratsMargin"
        android:text="@string/tvCongrats"
        android:gravity="center_horizontal"
        android:textSize="@dimen/congratsSplashTextSize"
        />

    <TextView
        android:id="@+id/tvWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCongrats"
        android:layout_marginTop="@dimen/tvWinnerMArgin"
        android:textSize="@dimen/congratsSplashTextSize"
        android:textStyle="italic|bold"
        android:layout_centerHorizontal="true"
        android:text="@string/tvWinner"/>

</RelativeLayout>