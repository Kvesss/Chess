<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/openingscreen"
    android:isScrollContainer="false"
    tools:context=".StartGameFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        >

        <EditText
            android:id="@+id/etPlayerBlack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/etPlayersHorizontalMargin"
            android:layout_marginTop="100dp"
            android:layout_marginRight="@dimen/etPlayersHorizontalMargin"
            android:hint="@string/player1hint"
            android:background="@drawable/curved_bisque"/>

        <EditText
            android:id="@+id/etPlayerWhite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/etPlayerBlack"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="@dimen/etPlayersHorizontalMargin"
            android:layout_marginRight="@dimen/etPlayersHorizontalMargin"
            android:hint="@string/player2hint"
            android:background="@drawable/curved_bisque"
        />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnStart"
        android:layout_below="@id/etPlayerWhite"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        />

    </RelativeLayout>

</FrameLayout>